# Badezeit Sylt Restaurant Platform - Environment Variables
# Copy this file to .env.local for development or configure in Vercel for production

# Database Configuration (Supabase Cloud)
# Replace with your actual Supabase database credentials
DATABASE_URL="postgresql://username:password@your-supabase-host:5432/postgres"
DIRECT_URL="postgresql://username:password@your-supabase-host:5432/postgres"

# Supabase Configuration (Authentication & Database)
# Get these from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL="https://your-project-id.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your_supabase_anon_key_here"

# Email Service (Resend)
# Get your API key from https://resend.com
RESEND_API_KEY="re_your_resend_api_key_here"
RESEND_FROM_EMAIL="noreply@yourdomain.com"

# Application Configuration
# For development:
NEXT_PUBLIC_APP_URL="http://localhost:3000"
# For production (replace with your actual domain):
# NEXT_PUBLIC_APP_URL="https://your-domain.vercel.app"
NEXT_PUBLIC_SITE_NAME="Badezeit Sylt"

# Restaurant Configuration
RESTAURANT_EMAIL="info@badezeit-sylt.de"
RESTAURANT_PHONE="+49 4651 123456"
RESTAURANT_ADDRESS="Strandstra√üe 1, 25980 Sylt, Deutschland"

# Environment Mode
# For development: NODE_ENV="development"
# For production: NODE_ENV="production"
NODE_ENV="production"

# Optional: Analytics
# NEXT_PUBLIC_GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"
# NEXT_PUBLIC_VERCEL_ANALYTICS=true

# Optional: Maps Integration
# NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your_google_maps_api_key_here"